{
  "manifest_version": 3,
  "name": "Intent-Aware PhishGuard",
  "version": "1.0.0",
  "description": "Privacy-first phishing protection that intervenes at the moment of user risk.",
  "permissions": ["storage", "tabs"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background/service_worker.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "content/dom_watcher.js",
        "content/warning_ui.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup/insights.html"
  }
}
